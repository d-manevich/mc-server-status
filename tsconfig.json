    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmit": true,
    "module": "ES2022",
    "target": "ES2021",
    "moduleResolution": "bundler",
    "baseUrl": "src",
    "paths": {
      "~/*": [
        "*"
      ]
    }
  },
  "include": [
    "src/**/*",
    "prisma/seed.ts"
  ]
}
